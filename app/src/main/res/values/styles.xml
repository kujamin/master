<resources>
    <!-- Base application theme. -->
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#F4385E</item>
        <item name="colorPrimaryVariant">#F4385E</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#F4385E</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.BlueRipple">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="CustomTextAppearenceWeek">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#4e000000</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="CustomTextAppearanceDay">
    <item name="android:textSize">15sp</item>
    <item name="android:shadowColor">#FFFFFF</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>
    </style>

</resources>