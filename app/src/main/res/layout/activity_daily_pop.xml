<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".DailyPopActivity"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/LiearStu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/imageViewStu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:src="@drawable/leaning" />

        <TextView
            android:id="@+id/textViewStu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="학업"
            android:onClick="onClickClose"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiearTimerr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/imageViewTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/about_time"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textViewTimerr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="타이머"
            android:onClick="onClickClose"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiearMedi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/imageViewMedi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/medical"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textViewMedi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="의료"
            android:onClick="onClickClose"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiearSpe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/imageViewSpecial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/special_day"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/textViewSpecial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="특별한 날"
            android:onClick="onClickClose"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>